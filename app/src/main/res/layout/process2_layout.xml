<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/my_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/mode_two"
            android:textColor="@color/white"
            android:textSize="@dimen/h1"
            android:textStyle="bold" />

    </LinearLayout>
    <!--Content-->
    <ScrollView
        android:layout_marginBottom="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryLight2"
        android:layout_below="@id/linTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox

                android:layout_weight="1"
                android:text="@string/box2_1"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="@string/box2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView

                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--ชื่อศพฌาปณกิจ-->
            <EditText

                android:text="@string/detail_name2"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--เลือกศาลาฌาปณกิจศพ-->
            <TextView
                android:text="@string/sala"
                android:textSize="@dimen/h2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--เลือกวันที่-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="30/10/2017"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView

                    android:text="09:00"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView

                    android:src="@mipmap/ic_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--เชิญศพจาก-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/bodyform2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText

                    android:hint="@string/sample_body"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <!--สวดอภิธรรม-->
            <TextView

                android:text="@string/time_work2"
                android:textSize="@dimen/h2"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <!--สบง-->
            <CheckBox

                android:text="@string/box2_3"
                android:textSize="@dimen/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Check Price1-->
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/ordain"
                    android:layout_weight="3"
                    android:textSize="@dimen/h2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:hint="@string/ordainedt"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Spinner

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></Spinner>

                <CheckBox
                    android:text="@string/ordain1"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/MonkDetail"
                    android:layout_weight="4"
                    android:textSize="@dimen/h2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Spinner

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></Spinner>

                <CheckBox
                    android:text="@string/MonkDetail1"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/MonkDetail2"
                    android:layout_weight="4"
                    android:textSize="@dimen/h2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Spinner

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></Spinner>

                <CheckBox
                    android:text="@string/MonkDetail3"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/MonkDetail4"
                    android:layout_weight="3"
                    android:textSize="@dimen/h2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:hint="@string/ordainedt"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Spinner

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></Spinner>

                <CheckBox
                    android:text="@string/MonkDetail5"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/MonkDetail6"
                    android:layout_weight="5"
                    android:textSize="@dimen/h2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:text="@string/MonkDetail7"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <!--Button SendData-->
    <Button

        android:text="@string/sent"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>